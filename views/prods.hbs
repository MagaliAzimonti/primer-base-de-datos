<div style="width:100%; max-width:600px; margin: 20px auto;">
    <div>
        <h2 style="color: white;">Lista de productos</h2>
        {{#if products}}
        <table class="table table-striped table-dark table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Marca</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th>{{id}}</th>
                    <th>{{nombre}}</th>
                    <th>${{precio}}</th>
                    <th>{{marca}}</th>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <p class="alert alert-danger">No hay productos en la lista</p>
        {{/if}}
    </div>
</div>
<br>

